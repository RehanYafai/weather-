<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
        integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Whether Website</title>
    <!-- <link rel="stylesheet" href="style.css"> -->
    <style>
        * {
            padding: 0;
            margin: 0;
        }

        .container {
            width: 100vw;
            height: 100vh;
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        .box {
            width: 15vw;
            height: 50vh;
            /* border: 2px solid red; */
            box-shadow: 2px;
            box-shadow: 5px 5px 25px -5px rgba(0, 0, 0, 0.5);
        }

        .data {
            /* background-color: #4794d8; */
            padding-bottom: 10px;
        }

        .pic {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 20vh;
            background-color: #a5bbdd;
        }

        .size50 {
            font-size: 60px;
            margin-right: 30px;
        }

        .location {
            padding-top: 30px;
            padding-bottom: 10px;
        }

        .location p {
            font-size: 2rem;
            font-weight: 600;
            display: inline;
        }

        .location i {
            font-size: 2rem;
        }

        .date {
            font-size: 1rem;
            padding-bottom: 10px;
            font-weight: 400;
        }

        .mainTemp {
            font-size: 2rem;
            font-weight: 600;
            padding-bottom: 10px;
            padding-top: 10px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="box">
            <div class="pic" id="pic">
                <i class="fa-solid fa-sun fa-beat size50" style="color:#eccc68"
                    style="--fa-animation-duration: 2s;"></i>
            </div>
            <div class="data">
                <div class=" location">
                    <i class="fa-solid fa-street-view fa-bounce"></i>
                    <p> {{Place}} , {{Country0}}</p>
                </div>
                <div class="date" id="dateSection">
                    <p>
                        FRI |FEB 11|12:20AM
                    </p>
                </div>
                <div class="temprature">
                    <p class="mainTemp">{{Temperature}}C</p>
                    <p><b>Min {{Temp_Min}} C</b> | <b>MAX {{Temp_Max}}C</b></p>
                </div>
            </div>
        </div>
    </div>
    <script>
        // console.log("hello world")
        let dateSection = document.getElementById("dateSection")
        // console.log(dateSection);
        //            Month
        let arrMonth = [
            "JAN",
            "FEB",
            "MAR",
            "APR",
            "MAY",
            "JUNE",
            "JULY",
            "AUG",
            "SEP",
            "OCT",
            "NOV",
            "DEC"
        ]
        // console.log(arrMonth[1])
        var today = new Date();
        var date = (arrMonth[(today.getMonth())] + '-' + today.getDate());
        console.log(date)
        //        day
        var days = ['SUN', 'MON', 'TUE', 'WED', 'THU', 'FRI', 'SAT'];
        var dayName = days[today.getDay()];
        // console.log(dayName)

        //              time
        function formatAMPM(date) {
            var hours = date.getHours();
            var minutes = date.getMinutes();
            var ampm = hours >= 12 ? 'pm' : 'am';
            hours = hours % 12;
            hours = hours ? hours : 12; // the hour '0' should be '12'
            minutes = minutes < 10 ? '0' + minutes : minutes;
            var strTime = hours + ':' + minutes + ' ' + ampm;
            return strTime;
        }
        let time = formatAMPM(new Date);
        // console.log(time);
        dateSection.innerHTML = `<p> ${dayName} | ${date} |${time} </p>`;


        let tempStatues = "{{tempStatus}}";
        let pic = document.getElementById("pic");
        if (tempStatues == "Sunny") {
            pic.innerHTML = `
            <i class="fa-solid fa-sun fa-beat size50" style="color:#eccc68"
                    style="--fa-animation-duration: 2s;"></i>
            `
        }
        else if (tempStatues == "Clouds") {
            pic.innerHTML = `
            <i class="fa-solid fa-cloud fa-beat size50" style="color:#dfe4ea"
                    style="--fa-animation-duration: 2s;"></i>
            `
        }

        else if (tempStatues == "Rainy") {
            pic.innerHTML = `
            <i class="fa-solid fa-cloud-rain fa-beat size50" style="color:#a4b0be"
                    style="--fa-animation-duration: 2s;"></i>
            `
        }
        else {
            pic.innerHTML = `
            <i class="fa-solid fa-cloud fa-beat size50" style="color:#dfe4ea"
                    style="--fa-animation-duration: 2s;"></i>
            `
        }



    </script>
</body>

</html>